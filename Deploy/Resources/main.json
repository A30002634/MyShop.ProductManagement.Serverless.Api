{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "templateSas": {
            "type": "securestring",
            "defaultValue": "TBD"
        },
        "buildNumber": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "rgName": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "rgLocation": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "sharedStorageName": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "sharedStorageContainer": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "serverName": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "databaseName": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "adminUserName": {
            "type": "string",
            "defaultValue": "TBD"
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "TBD"
        },
        "allowedIpAddresses": {
            "type": "array",
            "defaultValue": [ "TBD" ]
        }
    },
    "variables": {
        "templateUri": "[concat('https://',parameters('sharedStorageName'),'.blob.core.windows.net/',parameters('sharedStorageContainer'))]",
        "dbDeployment": "[concat(parameters('serverName'),'-',parameters('buildNumber'),'-deployment')]"
    },
    "resources": [
        {
            "name": "[variables('dbDeployment')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateUri'),'/Database/template.json','?', parameters('templateSas'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serverName": {
                        "value": "[parameters('serverName')]"
                    },
                    "serverLocation": {
                        "value": "[parameters('rgLocation')]"
                    },
                    "databaseName": {
                        "value": "[parameters('databaseName')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('adminUserName')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "allowedIpAddresses": {
                        "value": "[parameters('allowedIpAddresses')]"
                    }
                }
            }
        }
    ]
}